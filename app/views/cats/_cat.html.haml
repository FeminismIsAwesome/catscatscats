  .col-2
.cat-mechanics{style: "margin-top: 10px;"}
  .cat-shadow{style: "margin-left: 15px; width: 220px; float: left;"}
    Demands:
    !=  get_needs(cat["Number-tl"], true)
    %h4.cat-description{style: "margin-top: 5px; font-size: 14px;"}
      - (cat["description"] || "").split("\n").each do |line|
        %div
          != render_cat_line(line, big_cat: false)
    %h7.cat-flavor
      = cat["flavor"]
