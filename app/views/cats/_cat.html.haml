        = cat['title']
    %td{style: "border-top: 0px; padding-left: 10px; padding-right: 0px;"}
      %div.cat-score.cat-shadow{style: "margin-top: 5px; width: 80px;"}
        = cat['VP']
        = image_tag(asset_path("vp.PNG"), class: 'score-counter-img angry shorten')
